<div class="form-field {{field-class}} {{class}}">
    {{#if label }}
        <label for="" class="form-label {{label-class}}">{{{label}}}</label>
    {{/if}}

    {{#if select}}
        <select class="js-dropdown-box" {{#if placeholder}}data-placeholder="{{placeholder}}"{{/if}}>
            {{# times 5}}
                <option value="{{this}}">Example text {{this}}</option>
            {{/times}}
        </select>
        {{else}}
        {{#if textarea}}
            <textarea class="form-area {{area-class}}"
                {{#if placeholder}}placeholder="{{placeholder}}" {{/if}}
                {{#if disabled}}disabled{{/if}}></textarea>

        {{else}}
            <input type="text"
                   class="form-input  {{input-class}}"
                {{#if placeholder}}placeholder="{{placeholder}}" {{/if}}
                {{#if value}}value="{{value}}" {{/if}}
                {{#if disabled}}disabled{{/if}} />
        {{/if}}

        {{#if error}}
               <div class="tooltip-error">
                   <div class="tooltip-error__inner">
                            Укажите корректное название сметы
                   </div>
                     
                </div>
        {{/if}}
    {{/if}}
</div>